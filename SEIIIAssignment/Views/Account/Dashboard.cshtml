@model SEIIIAssignment.Models.User

@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";

}

<div class="row mb-2 mb-xl-3">
    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title mb-0"></h5>
                </div>
                <div class="card-body text-center">
                    <img src="~/uploads/img/user.png" alt="@Model.UserName" class="img-fluid rounded-circle mb-2" width="128" height="128"/>
                    <h3 class="card-title mb-0"> @Model.Name </h3>
                </div>
                <hr class="my-0"/>

                <hr class="my-0"/>
                <div class="card-body">
                    <h5 class="h6 card-title">About</h5>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1"><span data-feather="at-sign" class="feather-sm me-1"></span> Username : @Model.UserName</li>

                        <li class="mb-1"><span data-feather="mail" class="feather-sm me-1"></span> Email: @Model.Email</li>
                    </ul>
                </div>
            </div>
        </div>
   
       <div class="col-6">
            <div class="col">
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            Sold Item Name
                        </th>

                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in ViewBag.SoldItems)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-controller="Items" asp-route-id="@item.ItemId">@item.ProductName</a>
                            </td>


                        </tr>
                    }
                    </tbody>
                </table>
                <br/>
            </div>
            <div class="col">
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            Bought Item Name
                        </th>

                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in ViewBag.BoughtItems)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-controller="Items" asp-route-id="@item.ItemId">@item.ProductName</a>
                            </td>


                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div></div>
    </div>
