@model IEnumerable<SEIIIAssignment.Models.Auction>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellingAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boughtby)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postedby)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellingAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Boughtby.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postedby.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AuctionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AuctionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AuctionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
